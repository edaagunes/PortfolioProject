@model Project1Portfolio.Models.Profile
@{
    ViewBag.Title = "CreateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeni Profil Girişi</h2>


<form method="post">
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextAreaFor(x => x.Address, 2, 0, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    <br />
    <label>Github</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextAreaFor(x => x.Description, 3, 0, new { @class = "form-control" })
    <br />
    <br />
    <label>Lokasyon</label>
    @Html.TextAreaFor(x => x.MapLocation, 6, 0, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info">Ekle</button>
</form>
