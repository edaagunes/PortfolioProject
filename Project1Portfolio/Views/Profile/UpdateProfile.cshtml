@model Project1Portfolio.Models.Profile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Profil Güncelleme Sayfası</h2>


<form method="post">

    @Html.HiddenFor(x => x.ProfileID, new { @class = "form-control" })
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control", rows = 5 })
    <br />
    <label>Adres</label>
    @Html.TextAreaFor(x => x.Address, 2, 0, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    <label>Github</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control" ,rows=1})
    <br />
    <label>Fotoğraf</label>
    @Html.TextAreaFor(x => x.ImageUrl, 3, 0, new { @class = "form-control", rows = 5 })
    <br />
    <label>Lokasyon</label>
    @Html.TextAreaFor(x => x.MapLocation, 6, 0, new { @class = "form-control", rows = 5 })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>

