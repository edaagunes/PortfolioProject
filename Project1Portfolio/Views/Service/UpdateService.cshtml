@model Project1Portfolio.Models.Service
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hizmet Güncelleme Sayfası</h2>


<form method="post">

    @Html.HiddenFor(x => x.ServiceID, new { @class = "form-control" })
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control" })
    <br />
    <label>Icon</label>
    @Html.TextAreaFor(x => x.Icon, 2, 0, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>


